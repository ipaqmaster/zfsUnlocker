map add_module igb \
               r8169

map add_binary dhclient

map add_file   /sbin/dhclient-script

  # Use the machine's hostname if available for dhclient.
if [ -f "/etc/hostname" ] 
then
  echo "send host-name $(cat /etc/hostname);" > "${BUILDROOT}/etc/dhclient.conf"
  map add_file /etc/hostname
fi
